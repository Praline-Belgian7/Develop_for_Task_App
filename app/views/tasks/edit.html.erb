<% provide(:title, 'Edit Task') %>
<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, url: user_task_path(@user, @task), method: :patch, local: true) do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
      
      <%= f.label :name, class: "label-signup" %>
      <%= f.text_field :name, value: @task.name, class: "form-control" %>

      <%= f.label :description, class: "label-signup" %>
      <%= f.text_area :description, value: @task.description, rows: 5, class: "form-control" %>

      <%= f.submit "更新", class: "btn btn-primary btn-signup" %>
      <%= link_to "キャンセル", user_tasks_path(@user), class: "btn btn-default btn-signup" %>
    <% end %>
  </div>
</div>